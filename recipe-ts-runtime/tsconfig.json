{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",

        "lib": ["es6"],

        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "noImplicitAny": false,
        "removeComments": false,
        "sourceMap": true,
        "declaration": true,
        "diagnostics": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "noEmitOnError": true,

        "outDir": "target/dist"
    },

    "include": [
        "src/*.ts"
    ],

    "exclude": [
        "src/**/*.spec.ts"
    ]
}
